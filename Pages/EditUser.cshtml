@page
@using IISprojekt3.Models.Enums
@model IISprojekt3.Pages.EditUserModel
@{
    ViewData["Title"] = "Úprava uživatele";
}

@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger">@ViewData["Error"]</div>
}
else if (ViewData["Info"] != null)
{
    <div class="alert alert-success">@ViewData["Info"]</div>
}

<form class="col-md-4 jumbotron" method="post">
    <h4>Úprava uživatele</h4>
    <div class="form-group">
        <label>Jméno</label>
        <input class="form-control" asp-for="UserEntity.Name" />
    </div>

    <div class="form-group">
        <label>Heslo</label>
        <input class="form-control" type="password" asp-for="UserEntity.Password" />
    </div>

    <div class="form-group">
        <label>Role</label>
        <select class="form-control" asp-for="UserEntity.UserType" asp-items="Html.GetEnumSelectList<EUserType>()">
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Změnit</button>
</form>